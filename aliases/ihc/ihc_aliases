alias sudosu='sudo su - root -c "bash --rcfile ~jejackso/.bashrc"'
alias sshc="$HOME/.bin/environment/ihc.connect"

alias msa='sudo $HOME/.bin/msa_perms;sudo su - gabagool --session-command="/bin/bash --rcfile /home/gabagool/.jejackso.bashrc"'


function getprimary() {
    ssh -q $1 "hostname;sed '5q;d' /etc/motd;exit"
}

function getsecondary() {
    ssh -q $1 "hostname;sed '6q;d' /etc/motd;exit"
}

function getcustomer() {
    ssh -q $1 "hostname;sed '7q;d' /etc/motd;exit"
}

function today(){
  dt=$(date +"%Y/%b/%d")      
  td="$HOME/workshop/DailyTasks/$dt"
  mkdir -p "$td"
  cd $td
}

