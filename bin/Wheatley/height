#!/bin/bash

Height=`echo $(/usr/bin/mediainfo "$1" |grep Height |awk '{print $3}')`
 if [ $Height -lt 10 ]; then
   p=`/usr/bin/mediainfo "$1" |grep Height|awk '{print $4}'`
   Height=$Height$p
 fi


Width=`echo $(/usr/bin/mediainfo "$1" |grep Width |awk '{print $3}')`
 if [ $Width -lt 10 ]; then
   p=`/usr/bin/mediainfo "$1" |grep Width|awk '{print $4}'`
   Width=$Width$p
 fi

echo "$Width""w x $Height""h"
